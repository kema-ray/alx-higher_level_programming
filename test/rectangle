    def area(self):
        """
        Method that calculates the area of a rectangle
        Returns:
            rectangle area
        """

        return self.width * self.height

    def perimeter(self):
        """
        Method that calculates the perimeter of a rectangle
        Returns:
            rectangle perimeter
        """
        if self.width == 0 or self.height == 0:
            return 0

        return (2 * self.width) + (2 * self.height)